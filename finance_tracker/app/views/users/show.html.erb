<h2>User Details</h2>

<div class="card card-header results-block w-70" style="width: 900px; margin-left: 0;margin-bottom: 20px;">
  <table class="col-md-10">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td>
          <% if current_user.not_friends_with?(@user.id) %>
            <%= link_to 'Follow', friendships_path(friend: @user),
                        class: "btn btn-sm btn-success",
                        data: { turbo_method: :post } %>
          <% else %>
            <span class="badge badge-secondary" style="color: black;">
              You are already following
            </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div id="tracked_stocks"  class="mb-4">
  <% if !@tracked_stocks.nil? %>
    <%= render 'stocks/list' %>
  <% else %>
    <%= render 'stocks/empty_tracked_stocks' %>
  <% end %>
</div>